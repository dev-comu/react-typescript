{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "strict": true
  },
  "paths": {
    "@rtab/components/*": ["src/components/*"],
    "@rtab/images/*": ["src/images/*"]
  },
  "exclude": ["node_modules", "tmp"]
}
